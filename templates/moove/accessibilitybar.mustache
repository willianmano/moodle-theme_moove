{{!
    @template theme_nexus/accessibilitybar

    Accessibility toolbar template

    Example context (json): {}
}}
<div id="accessibilitybar" class="fixed-top">
    <div class="container-fluid">
        <div class="bars">
            <div class="fontsize">
                <span>{{#str}}accessibility:fontsize, theme_nexus{{/str}}</span>
                <ul>
                    <li><a class="btn btn-default" data-action="decrease" title="{{#str}}accessibility:decreasefont, theme_nexus{{/str}}" id="fontsize_dec">A-</a></li>
                    <li><a class="btn btn-default" data-action="reset" title="{{#str}}accessibility:resetfont, theme_nexus{{/str}}" id="fontsize_reset">A</a></li>
                    <li><a class="btn btn-default" data-action="increase" title="{{#str}}accessibility:increasefont, theme_nexus{{/str}}" id="fontsize_inc">A+</a></li>
                </ul>
            </div>
            <div class="sitecolor">
                <span>{{#str}}accessibility:sitecolor, theme_nexus{{/str}}</span>
                <ul>
                    <li><a class="btn btn-default" data-action="reset" title="{{#str}}accessibility:resetsitecolor, theme_nexus{{/str}}" id="sitecolor_color1">R</a></li>
                    <li><a class="btn btn-default" data-action="sitecolor-color-2" title="{{#str}}accessibility:sitecolor2, theme_nexus{{/str}}" id="sitecolor_color2">A</a></li>
                    <li><a class="btn btn-default" data-action="sitecolor-color-3" title="{{#str}}accessibility:sitecolor3, theme_nexus{{/str}}" id="sitecolor_color3">A</a></li>
                    <li><a class="btn btn-default" data-action="sitecolor-color-4" title="{{#str}}accessibility:sitecolor4, theme_nexus{{/str}}" id="sitecolor_color4">A</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

{{#js}}
    require(['theme_nexus/accessibilitybar'], function(AccessibilityBar) {
        AccessibilityBar.init();
    });
{{/js}}
